<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#141931"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_47"
            android:id="@+id/iv_back"
            android:layout_marginLeft="@dimen/dp_28"
            android:background="@drawable/back"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_movie_thekeyword"
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/etselector"
                android:hint="请输入影片关键字"
                android:layout_marginLeft="@dimen/dp_42"
                android:layout_marginTop="@dimen/dp_40"
                android:paddingLeft="@dimen/sp_10"/>

            <ImageView
                android:id="@+id/iv_search_movie"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_42"
                android:src="@drawable/search_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_30"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_150"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_20"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/search_recycle"
            ></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>