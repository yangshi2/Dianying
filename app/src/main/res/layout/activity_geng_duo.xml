<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bw.movie.view.activity.shouye.GengDuoActivity"
    android:background="#141931">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_44">

        <ImageView
            android:id="@+id/fan"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/back"/>

        <ImageView
            android:id="@+id/iv_search_movie_more"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:background="@drawable/icon_search"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_28"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:background="#1c2243"
        android:layout_marginTop="@dimen/dp_20">
        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/tab_gengduo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabTextColor="#ffffff"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabPaddingTop="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_48"
            android:layout_marginRight="@dimen/dp_48"></com.androidkun.xtablayout.XTabLayout>


    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_moviemore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>

</LinearLayout>