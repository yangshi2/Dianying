<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context="com.bw.movie.view.activity.login.LoginActivity">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_310"
    app:srcCompat="@drawable/login"
    />
    <EditText
        android:id="@+id/et_login_zhanghao"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_328"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/shapes"
        android:hint="请输入邮箱账号"
        android:paddingLeft="@dimen/dp_20"
        android:textColor = "@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_zhanghao"
        >
        <EditText
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_35"
            android:hint="请输入密码"
            android:textSize="14sp"
            android:textColor = "@android:color/white"
            android:textColorHint="@android:color/white"
            android:paddingLeft="@dimen/dp_20"
            android:background="@drawable/shapes"
            android:id="@+id/et_login_mima"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:text="忘记密码"
            android:background="@drawable/shapesbutton"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_forgetPwd"
            />
    </RelativeLayout>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="暂无账号 立即注册"
         android:textSize="10sp"
         app:layout_constraintTop_toBottomOf="@id/rel"
         app:layout_constraintRight_toRightOf="parent"
         android:layout_marginTop="@dimen/dp_8"
         android:layout_marginRight="@dimen/dp_24"
         android:textColor="#999999"
         android:id="@+id/tv_register"
         />

    <Button
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_10"
        android:text="登录"
        android:id="@+id/btn_login"
        android:textSize="16sp"
        android:background="@drawable/shapeslogin"
        app:layout_constraintTop_toBottomOf="@id/tv_register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#ffffff"
        />
    <View
        android:id="@+id/view_line1"
        android:layout_width="@dimen/dp_95"
        android:layout_height="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_29"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_73"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        android:background="@android:color/white"
        ></View>
    <TextView
        android:id="@+id/tv_huo"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_20"
        android:text="或"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@id/view_line1"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        />
    <View
        android:id="@+id/view_line2"
        android:layout_width="@dimen/dp_95"
        android:layout_height="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_29"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintLeft_toRightOf="@id/tv_huo"
        android:background="@android:color/white"
        ></View>
    <ImageButton
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_29"
        app:srcCompat="@drawable/weixin_copy_3"
        android:id="@+id/btn_VX"
        android:textSize="16sp"
        android:background="@drawable/shapesweixinlogin"
        app:layout_constraintTop_toBottomOf="@id/view_line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#ffffff"
        />
 </androidx.constraintlayout.widget.ConstraintLayout>